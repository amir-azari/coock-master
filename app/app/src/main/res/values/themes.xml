<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.RecipeApp" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/desertSand</item>
        <item name="colorPrimaryVariant">@color/yellowOrange</item>
        <item name="colorOnPrimary">@color/pastel_pink</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
    </style>

    <!--TextInputLayout-->
    <style name="DarkGreenTextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxStrokeColor">@color/yellowOrange</item>
        <item name="boxStrokeWidth">@dimen/_1mdp</item>
        <item name="boxCornerRadiusTopStart">@dimen/_15mdp</item>
        <item name="boxCornerRadiusTopEnd">@dimen/_15mdp</item>
        <item name="boxCornerRadiusBottomStart">@dimen/_15mdp</item>
        <item name="boxCornerRadiusBottomEnd">@dimen/_15mdp</item>
        <item name="android:layout_marginTop">@dimen/_10mdp</item>
        <item name="android:textColor">@color/yellowOrange</item>
        <item name="boxStrokeErrorColor">@color/tart_orange</item>
        <item name="startIconTint">@color/dark_gunmetal</item>
        <item name="hintTextColor">@color/dark_gunmetal</item>
    </style>
    <!--DarkGreen material button-->
    <style name="DarkGreenMaterialButton">
        <item name="backgroundTint">@color/yellowOrange</item>
        <item name="cornerRadius">@dimen/_15mdp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:textSize">@dimen/_14font_mdp</item>

    </style>
    <!--Chip group-->
    <style name="DarkChip" parent="Widget.MaterialComponents.Chip.Choice">
        <item name="chipBackgroundColor">@color/item_chip_background</item>
    </style>
    <style name="DietsChip" parent="Widget.MaterialComponents.Chip.Choice">
        <item name="chipBackgroundColor">@color/whiteSmoke</item>
        <item name="android:clickable">false</item>
        <item name="android:checkable">false</item>
    </style>

    <style name="Theme.RecipeApp" parent="Base.Theme.RecipeApp" />
    <!--Progressbar-->
    <style name="YellowProgressbar">
        <item name="colorAccent">@color/yellowOrange</item>
    </style>
    <!--Icon text-->
    <style name="IconTextView">
        <item name="android:drawablePadding">@dimen/_3mdp</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:textColor">@color/gray</item>
        <item name="drawableTint">@color/gray</item>
        <item name="android:textSize">@dimen/_8font_mdp</item>
    </style>
    <!--Shape imageview-->
    <style name="RoundedImageView">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">@dimen/_8mdp</item>
    </style>

</resources>